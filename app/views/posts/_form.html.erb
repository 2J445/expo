<div class="post-form">
<%= form_with(model: post) do |form| %>
  <%= render 'layouts/post_error_messages', model: form.object %>

  <div class="photo">
    <%= form.label '作品' %>
    <%= form.file_field :photo, id: "post_作品" %>
  </div>
  
  <div class="title">
    <%= form.label 'タイトル' %>
    <%= form.text_field :title, id: "post_タイトル"  %>
  </div>
  
  <div class="introduction">
    <%= form.label '詳細' %>
    <%= form.text_area :explanation, id: "post_詳細"  %>
  </div>

  <div class="actions">
    <%= form.submit '投稿', class: 'btn btn-primary' %>
  </div>
<% end %>
</div>
