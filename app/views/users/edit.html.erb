<% provide(:title, "Edit user") %>
<div class="text-center">
  <h1>プロフィール編集</h1>
</div>
<div class="row">
  <div class="col-sm-6 offset-sm-3">

    <%= form_with(model: @user) do |f| %>
    <%= render 'layouts/edit_error_messages', model: f.object %>
      <div class="mb-3">
        <ul class="user-image">
        <%= image_tag @user.image.url if @user.image? %>
        </ul>
        <ul class="select-image">
        <%= f.file_field :image %>
        </ul>
      </div>
      
      <div class="edit-items">
      <div class="mb-3">
        <%= f.label :name, 'ユーザーネーム' %>
        <%= f.text_field :name, class: 'form-control' %>
      </div>
      
      <div class="mb-3">
        <%= f.label :self_introduction, '自己紹介文' %>
        <%= f.text_area :self_introduction, class: 'form-control', :size=>"60x10" %>
      </div>

      <div class="mb-3">
        <%= f.label :email, 'メールアドレス' %>
        <%= f.email_field :email, class: 'form-control' %>
      </div>

      <div class="mb-3">
        <%= f.label :password, 'パスワード' %>
        <%= f.password_field :password, class: 'form-control' %>
      </div>

      <div class="mb-3">
        <%= f.label :password_confirmation, 'パスワード再確認' %>
        <%= f.password_field :password_confirmation, class: 'form-control' %>
      </div>

      <%= f.submit '保存', class: 'btn btn-primary w-100' %>
    <% end %>
    </div>
  </div>
</div>