<% if users.any? %>
<div class="user-list">
  <ul class="list-unstyled">
    <% users.each do |user| %>
      <li class="mb-3 d-flex">
        <% if  user.image.present? %>
        <div class="relationship-images">
      <p><%= link_to image_tag(user.image.url), user_path(user) if user.image? %></p>
      </div>
    <% else %>
    <div class="relationship-images">
      <p><%= link_to image_tag(gravatar_url(@user)) %></p>
      </div>
    <% end %>
        <div>
          <div class="relationship-name">
            <%= link_to user.name, user_path(user)  %>
          </div>
          <div class="relationship-introduction">
            <%= user.self_introduction %>
          </div>
        </div>
      </li>
      
    <% end %>
  </ul>
  </div>
<% end %>