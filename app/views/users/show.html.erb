<% if @current_user == @user %>
<div class="row">
  <aside class="col-sm-4">
    <div class="card">
      <div class="card-header">
        <h3 class="card-title"><%= @user.name %></h3>
      </div>
      <div class="card-body">
        <img class="rounded img-fluid" src="<%= gravatar_url(@user, { size: 500 }) %>" alt="">
      </div>
    </div>
  </aside>
  
  <% if @posts.any? %>
      <% @posts.each do |post| %>
      <table>
        <th><%= post.photo %></th>
      </table>
      <% end %>
  <div>
    <%== pagy_bootstrap_nav(@pagy) %>
  </div>
<% end %>

</div>
<% else %>
<div class="row">
  <aside class="col-sm-4">
    <div class="card ">
      <div class="card-header">
        <h3 class="card-title"><%= @user.name %></h3>
      </div>
      <div class="card-body">
        <img class="rounded-circle img-fluid" src="<%= gravatar_url(@user, { size: 500 }) %>" alt="">
      </div>
    </div>
  </aside>
</div>
<% end %>