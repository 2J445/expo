<h3>作品一覧</h3>
<div class="all-post">
      <% @posts.each do |post| %>
      <div class="post-box">
      <p><%= link_to image_tag(post.photo.url, :alt => '一覧時の作品の写真'), post  %></p>

     <div class="all-post-information">
     <h5>作品名</h5>
     <p><%= post.title %></p>

    <h5>作者</h5>
    <p><%= link_to post.user.name, user_path(post.user) %></p>
    
    <h5>詳細</h5>
    <p><%= post.explanation %></p>
    </div>
    </div>
      <% end %>
      <div class="post-index-pagy">
      <%== pagy_bootstrap_nav(@pagy) %>
      </div>
</div>
