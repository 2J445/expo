<% if logged_in? %>
<% if current_user == @post.user %>
<div class="show-post">
<p><%= image_tag @post.photo.url, size: '600x400' if @post.photo? %></p>


<h4>作品名</h4>
<p><%= @post.title  %></p>


<div class="post-user">
<h4>作者</h4>
 <p><%= link_to @post.user.name,  user_path(@post.user)%></p>
 </div>
 
 
<div class="post-intorduction">
<h4>詳細</h4>
<p><%= @post.explanation %></p>
</div>



<%= link_to '編集', edit_post_path(@post) %> |
<%= link_to "削除", @post, method: :delete, data: { confirm: "削除しますか？" } %> |
<%= link_to '戻る', '/' %>

</div>

<% else %>
<div class="show-post">

<p><%= image_tag @post.photo.url, size: '600x400' if @post.photo? %></p>

<h4>作品名</h4>
<p><%= @post.title %></p>

<div class="post-user">
<h4>作者</h4>
 <p><%= link_to @post.user.name,  user_path(@post.user)%></p>
 </div>
 
 
<div class="post-intorduction">
<h4>詳細</h4>
<p><%= @post.explanation %></p>
</div>



<%= render 'favorites/favorite_button', post: @post %>

<ul class="back">
<%= link_to '戻る', '/' %>
</ul>
<% end %>
</div>

<% else %>
<div class="show-post">
<p><%= image_tag @post.photo.url, size: '600x400' if @post.photo? %></p>


<h4>作品名</h4>
<p><%= @post.title  %></p>


<div class="post-user">
<h4>作者</h4>
 <p><%= link_to @post.user.name,  user_path(@post.user)%></p>
 </div>
 
 
<div class="post-intorduction">
<h4>詳細</h4>
<p><%= @post.explanation %></p>
</div>


<ul class="back">
<%= link_to '戻る', '/' %>
</ul>
</div>

<% end %>